node{
     
    stage('SCM Checkout'){
        git credentialsId: 'GIT_CREDENTIALS', url:  'https://github.com/siteshm/CICD.git',branch: 'master'
    }
    
    stage('Build Docker Image'){
        sh 'docker build -t siteshm/nodejsapp-1.0:latest .
    }
    
    stage('Push Docker Image'){
        withCredentials([string(credentialsId: 'DOKCER_HUB_PASSWORD', variable: 'DOKCER_HUB_PASSWORD')]) {
          sh "docker login -u siteshm -p ${DOKCER_HUB_PASSWORD}"
        }
        sh 'docker push siteshm/nodejsapp-1.0:latest'
     }
     
     stage("Deploy To Kuberates Cluster"){
        sh 'kubectl apply -f deploy.yaml'
      }
}
